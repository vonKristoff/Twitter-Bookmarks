@import 'nib'
@import 'mixins'
@import 'vars'

*, *:before, *:after
  box-sizing border-box
  zero()

html
  font-family 'Gothic-Med'
  font-size 18px
  background-color gold

ul
  list-style none

.connect
  color noir
  text-decoration none
  transition all .3s
  &:hover
    color blu

.wrapper
  width 100%
  margin 0 auto
  position relative

.header
  background-color gold
  border-bottom 2px solid noir
  position fixed
  width inherit
  top 0
  .menu
    display inline-block
    width 50%
    padding 1em pad
    .icon
      background-image url(local+'/assets/icons/refresh.svg')
      width 1em
      height 1em
      background-size contain
      display inline-block
      transition all .3s
      &:hover
        transform rotate(180deg)
    &.refresh
      text-align right


.results--container
  margin 60px 0
  border-bottom 2px solid noir 
  

.tweet
  user-select none
  background-color bg1
  transition all .4s
  opacity 1
  &:nth-child(odd)
    background-color bg2
  &:hover
    cursor pointer
  &.dragover
    background-color gold
    cursor pointer
  &.nudge
    border-left .5em solid spesh
    

.tweet--container
  padding pad
  .col-1-4
    max-height 50px
    height 50px
    max-width 50px
    width 50px
    display inline-block
    .profile
      background-repeat no-repeat
      border-radius 5px
      border 1px solid rgba(0,0,0,.2)
      background-position center center
      background-size cover
      width 100%
      padding-top 100%
  .col-3-4
    width calc(100% - 4em - 50px - 2em)
    display inline-block
    vertical-align top
    padding-left pad
    .head
      font-family 'Gothic-Light'
      font-size 12px
      padding-bottom .5em 
      div
        display inline-block
      .handle
        margin-left 1em
    .body
      .text
        a
          color blu
          text-decoration none  


.focus
  z-index 0
  position absolute
  top 0
  left 0
  pointer-events none
  cursor none
  .hotspot
    pointer-events none
    position absolute
    background-color noir
    width 100%
    height 100%
    display block
    .tweet--container
      background-color noir
      color gold
    