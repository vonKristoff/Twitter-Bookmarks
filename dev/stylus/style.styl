@import 'nib'
@import 'mixins'
@import 'vars'

*, *:before, *:after
  box-sizing border-box
  zero()

html
  font-family 'Gothic-Med'
  font-size 18px
  background-color gold

ul
  list-style none

.dragging
  cursor none

.wrapper
  width 100%
  margin 0 auto
  position relative

.header
  background-color gold
  border-bottom 2px solid noir
  position fixed
  width inherit
  top 0
  .menu
    display inline-block
    width 50%
    padding 1em pad
    &.refresh
      text-align right


.results--container
  margin 60px 0
  border-bottom 2px solid noir 
  .col-1-4
    height 60px
    width 60px
    display inline-block
  .col-3-4
    width calc(100% / 4 * 3)
    height 100%
    display inline-block
    vertical-align top
    padding-left pad

.tweet
  user-select none
  background-color bg1
  transition opacity 1.5s
  opacity 1
  &:nth-child(odd)
    background-color bg2
  &:hover
    cursor pointer
  &.dragover
    background-color gold
    

.tweet--container
  padding pad
  position relative
  .head
    font-family 'Gothic-Light'
    font-size 12px
    padding-bottom .5em 
    div
      display inline-block
    .handle
      margin-left 1em
  .profile
    background-repeat no-repeat
    border-radius 5px
    background-position center center
    background-size cover
    width 100%
    padding-top 100%

.focus
  z-index 0
  position absolute
  top 0
  left 0
  pointer-events none
  .hotspot
    pointer-events none
    position absolute
    transition all .2s
    background-color noir
    width 100%
    height 100%
    display block
    .tweet--container
      background-color noir
      color gold
    